#include <stdio.h>

int main()
{
	int s, b, c, result;
	printf("현재 시각 입력 : ");
	scanf_s("%d %d %d", &s, &b, &c);

	result = (s * 3600) + (b * 60) + c;

	printf("%d 초 흐름", result);

	return 0;
}
