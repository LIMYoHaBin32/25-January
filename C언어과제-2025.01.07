* 3번
#include <stdio.h>
int main()
{
	int a, b, c, result;
	printf("세 정수 입력 : ");
	scanf_s("%d %d %d", &a, &b, &c);

	result = (a > b) ? (a > c) ? a : c : (b > c) ? b : c;

	printf("결과 : %d", result);

	return 0;
}

