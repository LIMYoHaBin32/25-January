* 1번
#include <stdio.h>

int main()
{
	int x, y, z, result;
	printf("세 정수 입력 : ");
	scanf_s("%d %d %d", &x, &y, &z);
	
	result = (x + y) * (x + z) / (y % z);
	
	printf("결과 : %d", result);
	
	return 0;
}

