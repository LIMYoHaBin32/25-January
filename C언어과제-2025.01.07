* 2번
#include <stdio.h>
int main()
{
	int x, y, result;
	printf("두 정수 입력 : ");
	scanf_s("%d %d", &x, &y);
	
	result = (x > y) ? y : x;
	
	printf("결과 : %d", result);
	
	return 0;
}

